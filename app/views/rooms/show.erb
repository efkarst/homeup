<%content_for :main do %>
  <section class = "clearfix"> 
    <div class='section-title'>
      <h1><%=@room.name.capitalize%></h1>
      <a href='/rooms/<%=@room.slug%>/edit'><img src='/images/edit-icon.png' alt="Edit Room"></a>
      <form action="/rooms/<%=@room.slug%>" method="POST">
        <input id="hidden" type="hidden" name="_method" value="delete">  
        <input type='image' src="/images/delete-icon.png" alt = "Delete Project" class="fsSubmitButton">
      </form>
    </div>
    <div class="grid clearfix">
      <%@room.projects.each do |project|%>
        <a href="/projects/<%=project.slug%>"><%=project.name.capitalize%></a>
      <%end%>
    </div>
  </section>
<%end%>

<%content_for :sidebar do%>
  <section>
    <h1>Sidebar</h1>
  </section>
<%end%>


