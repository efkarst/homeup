<%content_for :main do %>

  <!-- *********************  Subheader  ********************* -->
  <div id="subheader">
    <h4><a href="/users/<%=@project.user.slug(:username)%>"><%=@project.user.name.capitalize%>'s Home</a> &nbsp;>&nbsp; <a href="/users/<%=@project.user.slug(:username)%>/rooms/<%=@project.room.slug(:name)%>"><%=@project.room.name.capitalize%></a> &nbsp;>&nbsp; <a href="/users/<%=@project.user.slug(:username)%>/projects/<%=@project.slug(:name)%>"><%=@project.name.capitalize%></a></h4>
  </div> <!--subheader-->


  <section class = "clearfix"> 
    <!-- *********************  Title  ********************* -->
    <div class='section-title'>
      <h1><%=@project.name.capitalize%></h1>
      <%if current_user == @project.user %>
        <a href='/users/<%=@project.user.slug(:username)%>/projects/<%=@project.slug(:name)%>/edit'><img src='/images/edit-icon.png' id = "Edit Project" alt="Edit Project"></a>
        <form action="/users/<%=@project.user.slug(:username)%>/projects/<%=@project.slug(:name)%>" method="POST">
          <input id="hidden" type="hidden" name="_method" value="delete">  
          <input type='image' src="/images/delete-icon.png" alt = "Delete Project" class="fsSubmitButton">
        </form>
      <%end%>
    </div>

    <!-- *********************  Main-body Project Details  ********************* -->
    <div id="project-notes" >
      <div class='panel-item'>
        <h3>Notes</h3>
        <p><%=@project.description%></p></br>
      </div>
      <div class='panel-item'>
        <h3>Materials</h3>
        <p><%=@project.materials%></p></br>
      </div>
    </div>
  </section>

<%end%>


<!-- *********************  Sidebar Project Details  ********************* -->
<%content_for :sidebar do%>
  <section class='panel'>
    <div class='panel-item'>
      <h4>Status</h4>
      <h3><%=@project.status%></h3></br>
    </div>
    <div class='panel-item'>
      <h4>Cost</h4>
      <h3>$<%=@project.cost%></h3></br>
    </div>
    <div class='panel-item'>
      <h4>Estimated Time</h4>
      <h3><%=@project.duration%> hours</h3></br>
    </div>
  </section>
<%end%>
