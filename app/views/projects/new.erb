<%content_for :main do %>

  <div id="subheader">
    <h4><a href="/users/<%=current_user.slug%>"><%=current_user.name.capitalize%>'s Home</a>  &nbsp;>&nbsp; New Project</h4>
  </div> <!--subheader-->

  <section class="clearfix">
    <h1>New Project</h1>
    
    <%if @project && @project.errors.any?%>
      <div class="flash wrapper home-user-options clearfix">
        <%=@project.errors.full_messages.to_sentence%>
      </div>
      <%if @project.room && @project.room.errors.any?%>
        <div class="flash wrapper home-user-options clearfix">
          <%=@project.room.errors.full_messages.to_sentence%>
        </div>
      <%end%>
    <%end%>

    <div class = "form clearfix">
      <form method='POST' action='/users/<%=current_user.slug%>/projects' id='new_project'>
        <table>
          <tr>
            <th>Project Name:</th>
            <td><input type='text' name='name' value = <%=@project.name if @project%>></td>
            <td> </td> <td> </td>
            <td><input type='submit' value='Create Project' ></td>
          </tr>    
          <tr>
            <th>Cost ($):</th>
            <td><input type='text' name='cost' value = <%=@project.cost if @project%>></td>
          </tr>
          <tr>
            <th>Duration (hr):</th>
            <td><input type='text' name='duration' value = <%=@project.duration if @project%>></td>
          </tr>  
          <%if current_user.rooms.empty? == true%>
            <tr>
              <th>Room:</th>
              <td><input type='text' name='new_room' value = <%=@project.room.name if @project%>></td>
            </tr>
          <%else%>
            <tr>
              <th>Add to New Room:</th>
              <td><input type='text' name='new_room' value = <%=@project.room.name if @project%>></td>
            </tr>
            <tr>
              <th>Add to an existing room:</th>
              <td>            
                <%current_user.rooms.each do |room|%>
                  <input type='radio' name = 'room' value='<%=room.name%>' id='<%=room.name%>'> <%=room.name.capitalize%></br>  
                <%end%>
              </td>
            </tr>
          <%end%>
          <tr>
            <th>Project Status:</th>
            <td>
              <input type = 'radio' name='status' value = 'Not started' id = 'Not started' checked>Not Started</br>
              <input type = 'radio' name='status' value = 'In progress' id = 'In progress'>In Progress</br>
              <input type = 'radio' name='status' value = 'Complete' id = 'Complete'>Complete
            </td>
          </tr>
          <tr>
            <th>Notes:</th>
            <td><textarea type='text' name='description' form='new_project'><%=@project.description if @project%></textarea></td>
          </tr>
          <tr>
            <th>Materials:</th>
            <td><textarea type='text' name='materials' form='new_project' ><%=@project.materials if @project%></textarea></td>
          </tr>
        </table>
      </form>
    </div>
  </section>
<%end%>
