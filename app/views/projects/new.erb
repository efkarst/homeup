<%content_for :main do %>
  <section class="clearfix">
    <h1>New Project</h1>

    <div class = "form clearfix">
      <form method='POST' action='/projects' id='new_project'>
        Project Name: <input type='text' name='name'></br>
        Description: <input type='text' name='description'></br>
        Materials: <input type='text' name='materials'></br></br>
        <%if current_user.rooms.empty? == true%>
          Room: <input type='text' name='room'></br>
        <%else%>
          Start a New Room: <input type='text' name='new_room'></br>
          Or Add to an Existing Room:</br>
          <%current_user.rooms.each do |room|%>
            <input type='radio' name = 'room' value='<%=room.name%>' id='<%=room.name%>'> <%=room.name.capitalize%> </br> 
          <%end%>
        <%end%>
        </br>
        Project Status: </br>
          <input type = 'radio' name='status' value = 'Not started' id = 'Not started' checked>Not Started</br>
          <input type = 'radio' name='status' value = 'In progress' id = 'In progress'>In Progress</br>
          <input type = 'radio' name='status' value = 'Complete' id = 'Complete'>Complete</br></br>
        <input type='submit' value='Create Project'>
      </form>
    </div>
  </section>
<%end%>

<%content_for :sidebar do%>
  <section>
    <h1>Sidebar</h1>
  </section>
<%end%>
